@model WebApplication1.EF.Models.FoodDistribution
@{
    ViewBag.Title = "CreateFoodDistribution";
}
<h1>Create Food Distrbution</h1>

@using (Html.BeginForm("CreateFoodDistribution", "HungerZero", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.CollectRequestId)
        @Html.DropDownListFor(model => model.CollectRequestId, new SelectList(ViewBag.CollectRequests, "CollectRequestId", "RequestDate"), "Select Collect Request", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CollectRequestId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DistributionDate)
        @Html.TextBoxFor(model => model.DistributionDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.DistributionDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Quantity)
        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Quantity)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RestaurantId)
        @Html.DropDownListFor(model => model.RestaurantId, new SelectList(ViewBag.Restaurants, "RestaurantId", "Name"), "Select Restaurant", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.RestaurantId)
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
}

